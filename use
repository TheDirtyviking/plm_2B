#!/usr/bin/env lua
-- vim: ft=lua ts=2 sw=2 sts=2 et:cindent:formatoptions+=cro
--------- --------- --------- --------- --------- --------- 

do 
  local root = '..'
  local seen = {}
  Luas = Luas or os.getenv('Luas') or '/opt/luas'
  function use(f)
    if not seen[f] then 
      seen[f] = true
      dofile(Ide .. '/' .. f)
      io.stderr:write('-- ' .. f .. '\n')
  end end 
end
